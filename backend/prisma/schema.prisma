generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  EDITOR
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  passwordHash String
  role         Role
  createdAt    DateTime @default(now())
}

model UsedToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  usedAt    DateTime @default(now())
}